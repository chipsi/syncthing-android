<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/inner"
            android:background="?colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
            android:paddingRight="@dimen/abc_action_bar_content_inset_material"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:background="@drawable/btn_syncthing_logo"
                android:contentDescription="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"  />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/menu"
                android:layout_toRightOf="@+id/menu"
                android:layout_marginTop="-5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="23sp" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/btnActive"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_toRightOf="@+id/app_name"
                android:layout_toEndOf="@+id/app_name"
                android:checked="true"
                android:focusable="false"
                android:visibility="gone"
                app:buttonTint="#76ff03" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/btnStarting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/app_name"
                android:layout_toEndOf="@+id/app_name"
                android:checked="true"
                android:focusable="false"
                android:visibility="gone"
                app:buttonTint="#fff103"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/btnDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/app_name"
                android:layout_toEndOf="@+id/app_name"
                android:checked="true"
                android:focusable="false"
                android:visibility="gone"
                app:buttonTint="#ffae03"/>

            <ImageButton
                android:id="@+id/add_folder"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:background="@drawable/btn_add_folder"
                android:contentDescription="@null"
                android:layout_toLeftOf="@+id/add_folder_text"
                android:layout_toStartOf="@+id/add_folder_text"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"  />

            <TextView
                android:id="@+id/add_folder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/add_device"
                android:layout_toStartOf="@+id/add_device"
                android:layout_marginTop="-5dp"
                android:paddingEnd="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/add_folder"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/add_device"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:background="@drawable/btn_add_device"
                android:layout_toLeftOf="@+id/add_device_text"
                android:layout_toStartOf="@+id/add_device_text"
                android:contentDescription="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"  />

            <TextView
                android:id="@+id/add_device_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/add_device"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:elevation="@dimen/toolbar_elevation"
            android:theme="@style/ThemeOverlay.Syncthing.Toolbar" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?android:windowBackground"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true" />
</android.support.v4.widget.DrawerLayout>
